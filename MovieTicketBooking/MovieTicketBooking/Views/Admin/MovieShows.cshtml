@model MovieTicketBooking.Models.MovieShow

@{
    ViewBag.Title = "Movie Shows";
}

<div class="container my-5 py-5">
    <h2>Movie Shows</h2>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <h4>Movie Show</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ShowId, "ShowId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ShowId", ViewBag.ShowId as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShowId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MovieId, "MovieId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MovieId", ViewBag.MovieId as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Show" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>